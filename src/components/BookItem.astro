---
const { id, title, cover, author, year, synopsis, buyLink, spreads } = Astro.props;
---

<article class="book-card">

    <div class ="book-cover">
        <img src={cover} alt={`Portada de ${title}`} />
    </div>

    <div class="book-info">
        <h3>{title}</h3>
        <p class="synopsis">{synopsis}</p>

        <div class="book-gallery-trigger" id={id}>
        
            {spreads.length > 0 && (
                <a
                    href={spreads[0].img}
                    class="btn-interior"
                    data-pswp-width={spreads[0].width}
                    data-pswp-height={spreads[0].height}
                    target="_blank"
                >
                Ver interior ðŸ“–
                </a>
            )}

            {spreads.slice(1).map((page) => (
                <a
                    href={page.img}
                    data-pswp-width={page.width}
                    data-pswp-height={page.height}
                    target="_blank"
                    class="hidden-spread"
                >
                </a>
            ))}
        
        </div>
    </div>
</article>

<style>
    .book-card {
        display: flex;
        gap: 2rem;
        margin-bottom: 4rem;
        align-items: center;
        background: #f8f9fa;
        padding: 2rem;
        border-radius: 12px;
    }

    .book-cover img {
        width: 200px;
        height: auto;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .book-info {
        margin-top: 0;
        font-size: 1.5rem;
        color: #2d3748;
    }

    .btn-interior {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.8rem 1.5rem;
        background-color: #2d3748;
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font weight: bold;
        transition: background 0.3s;
    }

    .btn-interior:hover {
        background-color: #000;
    }

    .hidden-spread {
        display: none;
    }

    @media (max-width: 768px) {
        book-card {
            flex-direction: column;
            text-align: center;
        }
    }
    </style>

    