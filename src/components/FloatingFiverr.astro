---
import { ui } from '../i18n/ui';

const lang = Astro.currentLocale || 'es';
const t = ui[lang];
---

<div id="fiverr-widget" class="floating-widget">
    
    <button id="close-fiverr" class="close-btn" aria-label="Cerrar">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
    </button>

    <a href="https://www.fiverr.com/florpiazza98" target="_blank" rel="noopener noreferrer" class="floating-btn" aria-label="Fiverr">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="fiverr-icon">
            <path d="M8 19V9a4 4 0 0 1 4-4"></path> 
            <path d="M5 9h6"></path>
            <path d="M16 19V9"></path>
            <circle cx="16" cy="5" r="1"></circle>
        </svg>
        <span class="floating-text">{t['fiverr.floating']}</span>
    </a>
</div>

<style>
    /* El contenedor principal. Por defecto está invisible y desplazado hacia abajo */
    .floating-widget {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 9999;
        opacity: 0;
        pointer-events: none; /* Evita clics accidentales cuando está invisible */
        transform: translateY(50px);
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    /* Esta clase se agrega por JS para mostrarlo */
    .floating-widget.show-widget {
        opacity: 1;
        pointer-events: auto;
        transform: translateY(0);
    }

    .close-btn {
        position: absolute;
        top: -10px;
        right: -10px;
        background: white;
        color: #999;
        border: 1px solid #eee;
        border-radius: 50%;
        width: 26px;
        height: 26px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        z-index: 10000;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: all 0.2s;
        padding: 0;
    }

    .close-btn:hover {
        background: #f5f5f5;
        color: #333;
        transform: scale(1.1);
    }

    .floating-btn {
        background-color: #1dbf73;
        color: white;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 20px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        box-shadow: 0 10px 25px rgba(29, 191, 115, 0.3);
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .floating-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(29, 191, 115, 0.4);
        background-color: #19a463;
    }

    .fiverr-icon {
        flex-shrink: 0;
    }

    @media (max-width: 768px) {
        .floating-widget {
            bottom: 20px;
            right: 20px;
        }
        .floating-btn {
            padding: 10px 16px;
            font-size: 0.85rem;
        }
    }
</style>

<script>
    // Usamos el evento 'load' para asegurarnos de que toda la página cargó primero
    window.addEventListener('load', () => {
        const widget = document.getElementById('fiverr-widget');
        const closeBtn = document.getElementById('close-fiverr');

        if (!widget || !closeBtn) return;

        // 1. Verificar si el usuario ya lo cerró en esta sesión
        // Usamos sessionStorage para que no lo moleste mientras navegue, pero si entra otro día, vuelva a aparecer.
        if (sessionStorage.getItem('fiverrWidgetClosed') === 'true') {
            return; // Detenemos la ejecución, no mostramos nada
        }

        // --- CONFIGURACIÓN ---
        const TIEMPO_ESPERA = 15000; // 15 segundos (15000 milisegundos)
        const CLICS_NECESARIOS = 3; // Mostrar después de abrir 3 imágenes
        // ---------------------

        let imagenesVistas = 0;
        let yaSeMostro = false;

        // Función que muestra el widget
        const mostrarWidget = () => {
            if (yaSeMostro) return;
            yaSeMostro = true;
            widget.classList.add('show-widget');
        };

        // DISPARADOR 1: Por tiempo (setTimeout)
        const temporizador = setTimeout(mostrarWidget, TIEMPO_ESPERA);

        // DISPARADOR 2: Por interacción (Clics en imágenes)
        // Buscamos todos los enlaces de la galería, libros y sketchbook que abren PhotoSwipe
        const enlacesGaleria = document.querySelectorAll('a[data-pswp-width], .brick a, .sketch-item');
        
        enlacesGaleria.forEach(enlace => {
            enlace.addEventListener('click', () => {
                if (yaSeMostro) return;
                
                imagenesVistas++;
                
                if (imagenesVistas >= CLICS_NECESARIOS) {
                    mostrarWidget();
                    clearTimeout(temporizador); // Cancelamos el contador de tiempo porque ya se activó
                }
            });
        });

        // FUNCIONALIDAD: Botón de cierre
        closeBtn.addEventListener('click', (e) => {
            e.preventDefault();
            widget.classList.remove('show-widget');
            // Guardamos en la memoria de la pestaña que el usuario lo cerró
            sessionStorage.setItem('fiverrWidgetClosed', 'true');
        });
    });
</script>