---
import { ui } from '../i18n/ui';

const lang = Astro.currentLocale || 'es';
const t = ui[lang];
---

<div id="fiverr-widget" class="floating-widget hidden">
    
    <button id="close-fiverr" class="close-btn" aria-label="Cerrar">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
    </button>

    <a href="https://www.fiverr.com/florpiazza98" target="_blank" rel="noopener noreferrer" class="floating-btn" aria-label="Fiverr">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="fiverr-icon">
            <path d="M8 19V9a4 4 0 0 1 4-4"></path> 
            <path d="M5 9h6"></path>
            <path d="M16 19V9"></path>
            <circle cx="16" cy="5" r="1"></circle>
        </svg>
        <span class="floating-text">{t['fiverr.floating']}</span>
    </a>
</div>

<style>
    .floating-widget {
        position: fixed;
        bottom: 30px;
        right: 30px;
        z-index: 9999;
        display: flex; 
        transition: all 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .floating-widget.hidden {
        opacity: 0;
        pointer-events: none;
        transform: translateY(60px);
    }

    .close-btn {
        position: absolute;
        top: -12px;
        right: -12px;
        background: white;
        color: #666;
        border: 2px solid #eaeaea;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        z-index: 10;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: all 0.2s;
        padding: 0;
    }

    .close-btn:hover {
        background: #f8f8f8;
        color: #000;
        transform: scale(1.1);
        border-color: #ccc;
    }

    /* --- NUEVO ESTILO DEL BOTÓN PRINCIPAL (Estilo Linktree) --- */
    .floating-btn {
        background-color: #fff; /* Fondo blanco por defecto */
        color: #1dbf73; /* Texto color Fiverr */
        border: 2px solid #eaeaea; /* Borde gris sutil por defecto */
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 20px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05); /* Sombra más sutil */
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .fiverr-icon {
        flex-shrink: 0;
    }

    /* --- ESTILOS PARA DESKTOP (Con Mouse) --- */
    @media (hover: hover) and (pointer: fine) {
        .floating-btn:hover {
            border-color: #1dbf73; /* Borde verde al pasar el mouse */
            background-color: rgba(29, 191, 115, 0.05); /* Fondo teñido suave */
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(29, 191, 115, 0.15); /* Sombra verde */
        }
    }

    /* --- ESTILOS PARA MÓVIL (Táctil) --- */
    @media (max-width: 768px) or (hover: none) and (pointer: coarse) {
        .floating-widget {
            bottom: 20px;
            right: 20px;
        }
        .floating-btn {
            padding: 10px 16px;
            font-size: 0.85rem;
            /* En móvil, el color ya queda fijo */
            border-color: rgba(29, 191, 115, 0.3);
            background-color: rgba(29, 191, 115, 0.05);
            box-shadow: none;
        }

        /* Feedback táctil al presionar */
        .floating-btn:active {
            transform: scale(0.96);
            transition: transform 0.1s ease;
        }
    }
</style>

<script>
    // En Astro, los scripts dentro de etiquetas <script> se ejecutan cuando el DOM está listo de forma automática.
    const widget = document.getElementById('fiverr-widget');
    const closeBtn = document.getElementById('close-fiverr');

    // Verificamos si los elementos existen y si el usuario NO lo ha cerrado antes
    if (widget && closeBtn && sessionStorage.getItem('fiverrCerrado') !== 'true') {
        
        let mostrado = false;

        const mostrarWidget = () => {
            if (mostrado) return;
            widget.classList.remove('hidden');
            mostrado = true;
        };

        // 1. Mostrar a los 5 segundos (cámbialo a 15000 o más cuando ya estés seguro de que funciona)
        const temporizador = setTimeout(mostrarWidget, 5000);

        // 2. Mostrar si abre 2 imágenes de la galería (buscamos las etiquetas 'a' que abren fotos)
        const imagenes = document.querySelectorAll('a[data-pswp-width]');
        let clics = 0;
        
        imagenes.forEach(img => {
            img.addEventListener('click', () => {
                clics++;
                if (clics >= 2) {
                    mostrarWidget();
                    clearTimeout(temporizador);
                }
            });
        });

        // 3. Funcionalidad de cerrar
        closeBtn.addEventListener('click', () => {
            widget.classList.add('hidden');
            // Guardamos que lo cerró para no molestarlo más en esta sesión
            sessionStorage.setItem('fiverrCerrado', 'true');
        });
    }
</script>