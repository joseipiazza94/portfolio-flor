<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #fff;
        font-family: system-ui, -apple-system, sans-serif;
        color: #333;
    }

    .linktree-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 600px;
        margin: 0 auto;
        padding: 3rem 1.5rem;
    }

    .lang-switch {
        width: 100%;
        display: flex;
        justify-content: flex-end;
        margin-bottom: 2rem;
    }

    .lang-switch a {
        color: #999;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: color 0.3s;
    }

    .lang-switch a:hover {
        color: #EB82BE;
    }

    .brand-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2.5rem;
        text-align: center;
    }

    .brand-logo {
        height: 80px;
        width: auto;
        margin-bottom: 0.5rem;
    }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0,0,0,0);
        border: 0;
    }

    .brand-header p {
        margin: 0;
        color: #666;
        font-weight: 500;
        font-size: 1.1rem;
    }

    .links-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 100%;
        max-width: 400px;
    }

    .link-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        padding: 1rem 1.5rem;
        background-color: #fff;
        border: 2px solid #eaeaea;
        border-radius: 50px;
        color: #444;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 0 4px 6px rgba(0,0,0,0.02);
        width: 100%;
        box-sizing: border-box;
    }

    .link-btn:nth-child(4n+1):hover {
        border-color: #43876f;
        color: #43876f;
        background-color: rgba(67, 199, 132, 0.05);
        transform: translateY(-4px);
        box-shadow: 0 8px 15px rgba(67, 199, 132, 0.15);
    }

    .link-btn:nth-child(4n+2):hover {
        border-color: #67b4ec;
        color: #67b4ec;
        background-color: rgba(103, 179, 236, 0.05);
        transform: translateY(-4px);
        box-shadow: 0 8px 15px rgba(103, 179, 236, 0.15);
    }

    .link-btn:nth-child(4n+3):hover {
        border-color: #d4c000;
        color: #d4c000;
        background-color: rgba(255, 179, 71, 0.05);
        transform: translateY(-4px);
        box-shadow: 0 8px 15px rgba(255, 179, 71, 0.15);
    }

    .link-btn:nth-child(4n+4):hover {
        border-color: #f26bd6;
        color: #f26bd6;
        background-color: rgba(235, 130, 190, 0.05);
        transform: translateY(-4px);
        box-shadow: 0 8px 15px rgba(235, 130, 190, 0.15);
    }

    button.link-btn {
        font-family: inherit;
    }

    @media (hover: none) and (pointer: coarse) {
        .link-btn:nth-child(4n+1) {
            border-color: rgba(67, 199, 132, 0.3);
            background-color: rgba(67, 199, 132, 0.05);
            color: #43876f;
        }

        .link-btn:nth-child(4n+2) {
            border-color: rgba(103, 179, 236, 0.3);
            background-color: rgba(103, 179, 236, 0.05);
            color: #67b4ec;
        }

        .link-btn:nth-child(4n+3) {
            border-color: rgba(212, 192, 0, 0.3); 
            background-color: rgba(255, 179, 71, 0.05);
            color: #d4c000;
        }

        .link-btn:nth-child(4n+4) {
            border-color: rgba(235, 130, 190, 0.3);
            background-color: rgba(235, 130, 190, 0.05);
            color: #f26bd6;
        }
        
        .link-btn:active {
            transform: scale(0.96);
            box-shadow: none;
            transition: transform 0.1s ease;
        }
       
    }

</style>



<script>
    const btnCopiar = document.getElementById('copy-email-btn');
    btnCopiar.addEventListener('click', async() => {
        const email = btnCopiar.getAttribute('data-email');
        try {
            await navigator.clipboard.writeText(email);
            const textoOriginal = btnCopiar.innerText;
            btnCopiar.innerText= '¡Email copied! ✓';
            setTimeout(() => {
                btnCopiar.innerText = textoOriginal;
            }, 2000);
        } catch (err) {
            console.error('Error al copiar el texto: ', err);
            btnCopiar.innerText = 'Error copying';
        }
    });
</script>
