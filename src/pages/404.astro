---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ui } from '../i18n/ui';

// Intentamos obtener el locale, si no, miramos la URL, y si no, espa√±ol por defecto.
const currentUrl = Astro.url.pathname;
const isEnglish = currentUrl.startsWith('/en/');
const lang = isEnglish ? 'en' : (Astro.currentLocale || 'es');

const t = ui[lang as keyof typeof ui];
---

<BaseLayout pageTitle={t['404.title']}>
  <div style="text-align: center; padding: 5rem 1rem;">
    <h1 style="font-size: 3rem;">{t['404.oops']}</h1>
    <p>{t['404.message']}</p>
    
    <a 
      href={`/${lang}/`} 
      style="color: #EB82BE; font-weight: bold; text-decoration: none;"
    >
      {t['404.back']}
    </a>
  </div>
</BaseLayout>